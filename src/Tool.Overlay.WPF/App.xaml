<Application x:Class="PixelAutomation.Tool.Overlay.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="OverlayBackground" Color="#01000000"/>
            <SolidColorBrush x:Key="ShapeStroke" Color="#FF00FF00"/>
            <SolidColorBrush x:Key="ShapeStrokeSelected" Color="#FFFF0000"/>
            <SolidColorBrush x:Key="ShapeFill" Color="#1000FF00"/>
            <SolidColorBrush x:Key="HandleFill" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="HandleStroke" Color="#FF000000"/>
            
            <Style x:Key="ResizeHandleStyle" TargetType="Ellipse">
                <Setter Property="Width" Value="8"/>
                <Setter Property="Height" Value="8"/>
                <Setter Property="Fill" Value="{StaticResource HandleFill}"/>
                <Setter Property="Stroke" Value="{StaticResource HandleStroke}"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Cursor" Value="SizeAll"/>
            </Style>
            
            <Style x:Key="ProbeRectStyle" TargetType="Rectangle">
                <Setter Property="Stroke" Value="{StaticResource ShapeStroke}"/>
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="Fill" Value="{StaticResource ShapeFill}"/>
                <Setter Property="StrokeDashArray" Value="2,2"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>